{
  "name": "backend",
  "version": "1.0.0",
  "description": "Back-end app for 4IT580 course",
  "main": "build/main.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--openssl-legacy-provider backpack",
    "start": "node ./build/main.js",
    "prestart": "run-s build",
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider backpack build",
    "postbuild": "nodetouch tmp/restart.txt",
    "build:watch": "nodemon --watch ./src --exec 'npm run build'",
    "prettier": "prettier --write \"src/**/*.ts\" README.md"
  },
  "dependencies": {
    "apollo-server-core": "3.12.0",
    "apollo-server-express": "3.12.0",
    "argon2": "0.30.3",
    "body-parser": "1.20.2",
    "cors": "2.8.5",
    "dotenv-flow": "3.2.0",
    "express": "4.18.2",
    "graphql": "^15.8.0",
    "jsonwebtoken": "9.0.0",
    "mariadb": "2.5.6"
  },
  "devDependencies": {
    "backpack-core": "^0.8.4",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.8",
    "touch": "^3.1.0",
    "ts-loader": "^8.3.0",
    "typescript": "5.0.4"
  }
}
